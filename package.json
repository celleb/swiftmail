{
  "name": "swiftmail",
  "version": "1.0.0",
  "author": "Jonas Tomanga",
  "description": "A package for sending authentication emails with support for NestJS and non-NestJS projects.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "turbo run build",
    "build:templ": "turbo run build --filter=@swiftmail/templ",
    "start": "node dist/index.js",
    "test": "turbo run test",
    "test:templ": "turbo run test --filter=@swiftmail/templ-tests",
    "dev": "turbo run dev",
    "dev:templ": "turbo run dev --filter=@swiftmail/templ"
  },
  "keywords": [
    "email",
    "authentication",
    "nodemailer",
    "nestjs"
  ],
  "license": "MIT",
  "packageManager": "pnpm@9.12.13",
  "devDependencies": {
    "@types/node": "^18.0.0",
    "turbo": "^2.2.3",
    "typescript": "^4.7.4"
  }
}
