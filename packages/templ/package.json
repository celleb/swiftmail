{
  "name": "@swiftmail/templ",
  "version": "1.0.0",
  "author": "Jonas Tomanga",
  "description": "A system for creating and rendering HTML templates in HTML.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --sourcemap --clean",
    "dev": "tsup src/index.ts --watch --format cjs,esm --dts --sourcemap",
    "test": "vitest run"
  },
  "keywords": [
    "render",
    "html",
    "template",
    "parser"
  ],
  "license": "MIT",
  "dependencies": {
    "tsup": "^8.3.5",
    "@swiftmail/logger": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^4.7.4",
    "vitest": "^2.1.4"
  }
}
