{
  "name": "@swiftmail/mail",
  "version": "0.0.1",
  "author": "Jonas Tomanga",
  "description": "A package for composing and sending swift html emails, with a special focus on authentication emails.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/celleb/swiftmail.git",
    "directory": "packages/mail"
  },
  "bugs": {
    "url": "https://github.com/celleb/swiftmail/issues"
  },
  "homepage": "https://github.com/celleb/swiftmail#readme",
  "scripts": {
    "build": "pnpm run cpt && tsc ",
    "dev": "pnpm run cpt && tsc -p tsconfig.build.json --watch",
    "cpt": "mkdir -p dist/templates && cp -r src/templates/* dist/templates",
    "test": "vitest run"
  },
  "keywords": [
    "email",
    "authentication",
    "html",
    "send"
  ],
  "license": "MIT",
  "dependencies": {
    "@swiftmail/logger": "workspace:*",
    "@swiftmail/templ": "workspace:*",
    "nodemailer": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/nodemailer": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
