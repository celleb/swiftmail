{
  "name": "@swiftmail/mail",
  "version": "0.0.1",
  "author": "Jonas Tomanga",
  "description": "A package for sending emails swiftly with nodemailer.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm run cpt && tsc ",
    "dev": "pnpm run cpt && tsc -p tsconfig.build.json --watch",
    "cpt": "mkdir -p dist/templates && cp -r src/templates/* dist/templates",
    "test": "vitest run"
  },
  "keywords": [
    "email",
    "authentication",
    "nodemailer",
    "nestjs"
  ],
  "license": "MIT",
  "dependencies": {
    "@swiftmail/logger": "workspace:*",
    "@swiftmail/templ": "workspace:*",
    "nodemailer": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/nodemailer": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
